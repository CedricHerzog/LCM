{% extends 'base.html.twig' %}

{% block title %}Exchange{% endblock %}

{% block body %}
    <h1>Exchange</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exchange.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exchange.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exchange.description }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ exchange.lat }}</td>
            </tr>
            <tr>
                <th>Lon</th>
                <td>{{ exchange.lon }}</td>
            </tr>
            <tr>
                <th>Money</th>
                <td>{{ exchange.money }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('exchange_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('exchange_edit', {'id': exchange.id}) }}">edit</a>

    {{ include('exchange/_delete_form.html.twig') }}
{% endblock %}
